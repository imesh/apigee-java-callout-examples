<ProxyEndpoint name='default'>
  <Description>Base64 Java Callout</Description>
  <HTTPProxyConnection>
    <BasePath>/base64-java-callout</BasePath>
    <Properties/>
    <VirtualHost>secure</VirtualHost>
  </HTTPProxyConnection>

  <FaultRules/>

  <PreFlow name="PreFlow">
      <Request/>
      <Response/>
  </PreFlow>

  <PostFlow name="PostFlow">
      <Request/>
      <Response/>
  </PostFlow>

  <Flows>
    <Flow name='decode'>
      <Request/>
      <Response>
        <Step><Name>Base64JavaCallout</Name></Step>
        <Step><Name>ClearRequestHeaders</Name></Step>
      </Response>
      <Condition>(proxy.pathsuffix ~ "/decode") and (request.verb = "GET")</Condition>
    </Flow>
  </Flows>

  <RouteRule name='notarget'>
  </RouteRule>
</ProxyEndpoint>
